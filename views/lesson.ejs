
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-auto">
      <div class="btn-group" role="group" aria-label="Basic outlined example">
        <a href="/lessons" class="btn btn-outline-primary">Pdfs</a>
        <a href="/videos" class="btn btn-outline-primary">Videos</a>
      </div>

  <div class="row">
    <div class="col-auto">
      <button type="button" class="btn btn-link" data-bs-toggle="modal" data-bs-target="#exampleModal"
        data-bs-whatever="@mdo" id="addLesson">
        <i class="fa-solid fa-file-circle-plus"></i> Add lesson
      </button>
    </div>
  </div>
</div>
</div>

  <div class="row mt-4 row-cols-1 row-cols-md-4 g-4" id="lesson">
    <% lessons.forEach(function(lesson) { %>
      <div class="col">
        <div class="card">
          <a href="/lessons/<%= lesson._id %>"><img src="/uploads/<%=lesson.imgFilePath %>" height="200px"
              class="card-img-top" alt="<%= lesson.imgFilePath %>"></a>
          <div class="card-body">
            <h5 class="card-title"><%= lesson.title %></h5>
            <a href="/download/<%= lesson._id %>" class="btn btn-primary">Download PDF</a>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</div>
<!-- ... -->



</div>


<!---Start of Modal-->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Add new lesson</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/addLesson" method="POST" enctype="multipart/form-data">
          <div class="mb-3">
            <label for="title" class="form-label">Lesson Title</label>
            <input type="text" class="form-control" id="title" name="title" required>
          </div>
          <div class="mb-3">
            <label for="description" class="form-label">Lesson Description</label>
            <textarea class="form-control" id="description" name="description" rows="3" required></textarea>
          </div>
          <div class="mb-3">
            <label for="pdfFile" class="form-label">PDF File</label>
            <input type="file" class="form-control" id="pdfFile" name="pdfFile">
          </div>
          <div class="mb-3">
            <label for="imgFile" class="form-label">Image File</label>
            <input type="file" class="form-control" id="imgFile" name="imgFile">
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>

      </div>
    </div>
    <!---End of Modal-->